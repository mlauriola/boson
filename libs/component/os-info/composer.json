{
    "name": "boson-php/os-info",
    "description": "Provides object-oriented interfaces to detect operating system",
    "type": "library",
    "license": "MIT",
    "homepage": "https://bosonphp.com",
    "support": {
        "issues": "https://github.com/boson-php/boson/issues",
        "source": "https://github.com/boson-php/os-info"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-pcre": "*",
        "ext-ffi": "*",
        "boson-php/os-info-contracts": "^0.16"
        "ffi/env": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Boson\\Component\\OsInfo\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Boson\\Component\\OsInfo\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.16.x-dev",
            "dev-main": "0.16.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
