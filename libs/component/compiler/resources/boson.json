{
    "name": "app",
    "entrypoint": "index.php",
    "target": [
        {
            "type": "windows",
            "arch": "amd64"
        },
        {
            "type": "linux",
            "arch": "amd64"
        },
        {
            "type": "linux",
            "arch": "arm64"
        },
        {
            "type": "macos",
            "arch": "amd64"
        },
        {
            "type": "macos",
            "arch": "arm64"
        },
        {
            "type": "phar"
        }
    ],
    "output": ".\/build",
    "build": {
        "directories": [
            "public"
        ],
        "finder": [
            {
                "directory": "src",
                "name": "*.php"
            },
            {
                "directory": "vendor",
                "not-directory": "vendor\/boson-php\/compiler",
                "name": "*.php"
            }
        ]
    },
    "ini": {
        "memory_limit": "128M"
    }
}
