{
    "name": "app",
    "target": [
        {
            "type": "windows",
            "arch": "amd64",
            "ini": {
                "opcache.enable": true,
                "opcache.enable_cli": true
            }
        },
        {
            "type": "linux",
            "arch": "amd64"
        },
        {
            "type": "linux",
            "arch": "arm64"
        },
        {
            "type": "macos",
            "arch": "amd64"
        },
        {
            "type": "macos",
            "arch": "arm64"
        },
        {
            "type": "phar"
        }
    ],
    "entrypoint": "index.php",
    "output": "./build",
    "extensions": [
        "ctype",
        "iconv"
    ],
    "mount": [
        "public"
    ],
    "build": {
        "directories": [
            "assets"
        ],
        "finder": [
            {
                "directory": "src",
                "name": "*.php"
            },
            {
                "directory": "vendor",
                "not-directory": "vendor/boson-php/compiler",
                "name": "*.php",
                "not-name": [
                    "*Test.php",
                    "*TestCase.php",
                    ".phpstorm.meta.php"
                ]
            }
        ]
    },
    "ini": {
        "memory_limit": "512M",
        "opcache.enable": false,
        "opcache.enable_cli": false
    }
}
