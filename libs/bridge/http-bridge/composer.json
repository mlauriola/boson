{
    "name": "boson-php/http-bridge",
    "description": "Provides basic interfaces and classes for http bridges",
    "type": "library",
    "license": "MIT",
    "homepage": "https://bosonphp.com",
    "support": {
        "issues": "https://github.com/boson-php/boson/issues",
        "source": "https://github.com/boson-php/http-bridge"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.4",
        "boson-php/globals-provider": "^0.17",
        "boson-php/http-body-decoder": "^0.17",
        "boson-php/http-contracts": "^0.17"
    },
    "autoload": {
        "psr-4": {
            "Boson\\Bridge\\Http\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "boson-php/http": "^0.17"
    },
    "autoload-dev": {
        "psr-4": {
            "Boson\\Bridge\\Http\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.17.x-dev",
            "dev-main": "0.17.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
