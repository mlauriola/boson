{
    "name": "boson-php/symfony-bundle",
    "description": "Boson Runtime for Symfony Framework",
    "type": "symfony-bundle",
    "license": "MIT",
    "homepage": "https://bosonphp.com",
    "support": {
        "issues": "https://github.com/boson-php/boson/issues",
        "source": "https://github.com/boson-php/symfony-bundle"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^8.4",
        "boson-php/http-static-provider": "^0.18",
        "boson-php/runtime": "^0.18",
        "boson-php/symfony-http-bridge": "^0.18",
        "symfony/config": "^6.4|^7.0",
        "symfony/dependency-injection": "^6.4|^7.0",
        "symfony/http-kernel": "^6.4|^7.0",
        "symfony/runtime": "^6.4|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Boson\\Bridge\\Symfony\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Boson\\Bridge\\Symfony\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.18.x-dev",
            "dev-main": "0.18.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
